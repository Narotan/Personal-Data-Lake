# Copy this file to .env and fill in your values
# cp .env.example .env



# ============================================
# WakaTime API Configuration
# ============================================
# Get your credentials at: https://wakatime.com/apps

CLIENT_ID="your_wakatime_client_id_here"
CLIENT_SECRET="your_wakatime_client_secret_here"
REDIRECT_URI="http://localhost:8080/callback"



# ============================================
# Google OAuth Configuration
# ============================================
# Get your credentials at: https://console.cloud.google.com/
# Enable Google Fit API and Google Calendar API

GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"
GOOGLE_REDIRECT_URI="http://localhost:8080/oauth2callback"
GOOGLE_CALENDAR_REDIRECT_URI="http://localhost:8080/oauth2callback/calendar"



# ============================================
# User Configuration
# ============================================
# Generate your UUID at: https://www.uuidgenerator.net/
# Or use command: uuidgen (Linux/macOS)

API_USER_ID="00000000-0000-0000-0000-000000000001"



# ============================================
# API Security
# ============================================
# Generate a secure API key with:
# openssl rand -hex 32
# This key will be used for API authentication (X-API-Key header)

API_KEY="your_secret_api_key_here_generate_with_openssl"



# ============================================
# Scheduler Configuration
# ============================================
# Enable automatic data collection every 30 minutes
# Set to "false" to disable background data collection

ENABLE_SCHEDULER="true"



# ============================================
# Database Configuration
# ============================================

DSN="postgres://postgres:postgres@localhost:5432/datalake?sslmode=disable"



# ============================================
# Application Configuration
# ============================================
# Environment: development | production

ENVIRONMENT="development"

# Server port
PORT="8080"


