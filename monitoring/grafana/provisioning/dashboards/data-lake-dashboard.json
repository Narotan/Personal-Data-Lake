{
  "title": "Data Lake Monitoring",
  "tags": ["data-lake", "wakatime"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 0,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Requests Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{method}} {{endpoint}} {{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "opacity",
            "spanNulls": true,
            "showPoints": "never"
          },
          "unit": "reqps",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["mean", "lastNotNull"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    },
    {
      "id": 2,
      "title": "HTTP Response Time (P95)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "P95 {{endpoint}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "P50 {{endpoint}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "spanNulls": true,
            "showPoints": "never"
          },
          "unit": "s",
          "color": {"mode": "palette-classic"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 0.5, "color": "yellow"},
              {"value": 1, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    },
    {
      "id": 3,
      "title": "WakaTime Fetch Operations",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "wakatime_fetch_total"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 4,
      "title": "WakaTime Errors",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
      "targets": [
        {
          "expr": "wakatime_fetch_errors_total"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      },
      "thresholds": {
        "mode": "absolute",
        "steps": [
          {"value": 0, "color": "green"},
          {"value": 1, "color": "red"}
        ]
      }
    },
    {
      "id": 5,
      "title": "Database Operations",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "rate(database_operations_total[5m])",
          "legendFormat": "{{operation}} {{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "opacity",
            "spanNulls": true,
            "showPoints": "never"
          },
          "unit": "ops",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["mean", "lastNotNull"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    },
    {
      "id": 6,
      "title": "Application Logs",
      "type": "logs",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "{container=\"data-lake\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true
      }
    },
    {
      "id": 7,
      "title": "Error Logs",
      "type": "logs",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 26},
      "targets": [
        {
          "expr": "{container=\"data-lake\"} |= \"error\" or \"Error\" or \"ERROR\" or \"FTL\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true
      }
    },
    {
      "id": 8,
      "title": "Go Goroutines",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 26},
      "targets": [
        {
          "expr": "go_goroutines",
          "legendFormat": "Active Goroutines",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "hue",
            "spanNulls": true,
            "showPoints": "never"
          },
          "unit": "short",
          "color": {"mode": "continuous-GrYlRd"}
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "single", "sort": "none"}
      }
    },
    {
      "id": 9,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 34},
      "targets": [
        {
          "expr": "go_memstats_alloc_bytes",
          "legendFormat": "Allocated",
          "refId": "A"
        },
        {
          "expr": "go_memstats_heap_inuse_bytes",
          "legendFormat": "Heap In Use",
          "refId": "B"
        },
        {
          "expr": "go_memstats_sys_bytes",
          "legendFormat": "System",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "scheme",
            "spanNulls": true,
            "showPoints": "never",
            "stacking": {"mode": "none"}
          },
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["mean", "max", "lastNotNull"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    },
    {
      "id": 10,
      "title": "WakaTime Fetch Duration",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 34},
      "targets": [
        {
          "expr": "rate(wakatime_fetch_duration_seconds_sum[5m]) / rate(wakatime_fetch_duration_seconds_count[5m])",
          "legendFormat": "Avg Duration",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(wakatime_fetch_duration_seconds_bucket[5m]))",
          "legendFormat": "P95 Duration",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "opacity",
            "spanNulls": true,
            "showPoints": "never"
          },
          "unit": "s",
          "color": {"mode": "palette-classic"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 2, "color": "yellow"},
              {"value": 5, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    }
  ]
}
